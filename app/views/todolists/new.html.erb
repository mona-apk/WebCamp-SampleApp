<h1>新規投稿</h1>
<!-- Rubyでは独自のタグが利用される.=がついている部分のみ画面に出力される. -->
<!-- form_for部分 -->
<%= form_for(@list, url: '/todolists') do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit '投稿' %>

    <!-- 追加部分 -->
    <h4>画像</h4>
    <%= f.attachment_field :image %>

<% end %>
